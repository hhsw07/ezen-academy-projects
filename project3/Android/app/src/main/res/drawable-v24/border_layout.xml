<?xml version="1.0" encoding="utf-8"?>
<!--
    start : 왼쪽 테두리
    end : 오른쪽 테두리
    top : 위쪽 테두리
    bottom : 아래쪽 테두리

    shape android:shape = "" : 테두리의 모양
    stroke android:width = "" : 테두리의 두께
            android:color = "" : 테두리의 색상
    solid android:color = "" : 내부 새상
    -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:start="2dp"
        android:end="2dp"
        android:top="2dp"
        android:bottom="2dp" >
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>