<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/margin_left_right"
            android:src="@mipmap/icon_receiver_address" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_left_right"
            android:layout_marginTop="@dimen/margin_left_right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/receiver_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_black_33"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/receiver_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18300001111"
                    android:textColor="@color/text_black_33"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/receiver_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="收货地址: "
                android:textColor="@color/text_black_33"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/margin_left_right"
            android:src="@mipmap/icon_option_right_black" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_divider_much_color" />

</LinearLayout>